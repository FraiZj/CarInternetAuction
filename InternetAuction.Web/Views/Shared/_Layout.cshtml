﻿﻿﻿﻿﻿<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <header id="top">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="top">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("ActiveLots", "Lots")">
                    <img src="~/Content/images/logo.png" width="50" height="50" class="d-inline-block align-top" alt="logo">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav">
                        <li class="nav-item">@Html.ActionLink("Auction", "ActiveLots", "Lots", htmlAttributes: new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Tax Calculator", "ActiveLots", "Lots", htmlAttributes: new { @class = "nav-link disabled" })</li>
                        <li class="nav-item">@Html.ActionLink("Contact", "ActiveLots", "Lots", htmlAttributes: new { @class = "nav-link disabled" })</li>
                        <li class="nav-item">@Html.ActionLink("Create Lot", "Create", "Lots", htmlAttributes: new { @class = "nav-link" })</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <div class="container">

        <div class="row">

            <div class="col-lg-3 mb-2">

                <aside class="container">
                    @RenderSection("sidebar", required: false)
                </aside>

            </div>

            <div class="col-lg-9">
                <main>
                    @RenderBody()
                </main>
            </div>

        </div>

    </div>

    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-1 text-center text-white">Copyright &copy; Your Website 2020</p>
            <p class="m-1 text-center text-white">
                Icons made by
                <a href="https://www.flaticon.com/authors/smashicons" title="Smashicons">Smashicons</a>
                from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a>
            </p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


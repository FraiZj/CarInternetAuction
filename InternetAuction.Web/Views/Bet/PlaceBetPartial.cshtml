@model InternetAuction.Web.ViewModels.BetViewModel

@using (Html.BeginForm("PlaceBet", "Bet", FormMethod.Post, new { id = "form" }))
{
    @Html.AntiForgeryToken()
    
    <h3 class="font-weight-light">Place a bet</h3>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.LotId)

        <div class="form-group p-0">
            @Html.LabelFor(model => model.Sum, htmlAttributes: new { @class = "control-label col-lg-12" })
            <div class="col-lg-12 p-0">
                @Html.EditorFor(model => model.Sum, new { htmlAttributes = new { @class = "form-control", required = "" } })
                @Html.ValidationMessageFor(model => model.Sum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-12">
                <input type="submit" value="Create" class="btn btn-dark col-12" />
            </div>
        </div>
    </div>
}
